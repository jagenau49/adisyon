<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etSiparisSaati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="siparis saati"
        android:inputType="time" />

    <EditText
        android:id="@+id/etSurucuNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="sürücü no"
        android:inputType="number" />

    <EditText
        android:id="@+id/etOdemeYontemi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="odeme yöntemi"
        android:inputType="text" />

    <EditText
        android:id="@+id/etUcret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ücret"
        android:inputType="number" />

    <Button
        android:id="@+id/btKaydet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:onClick="siparisKaydet"
        android:text="Siparisi Kaydet" />

    <Button
        android:id="@+id/btSifirla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="verileriSifirla"
        android:text="SIFIRLA" />

    <TextView
        android:id="@+id/tvSiparisDokumu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Burada verilen siparisler gozukecek"
        android:textColor="#3F51B5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Teslim edilen siparisler:"
        android:textColor="#2196F3"
        android:textColorHint="#982323"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="106dp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Saat"
            android:textColor="#FF5722"
            android:textSize="20sp"
            app:layout_column="0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Sürücü"
            android:textColor="#FF5722"
            android:textSize="20sp"
            app:layout_column="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Yöntem"
            android:textColor="#FF5722"
            android:textSize="20sp"
            app:layout_column="2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ücret"
            android:textColor="#FF5722"
            android:textSize="20sp"
            app:layout_column="3" />

        <TextView
            android:id="@+id/tvSaat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="21:30"
            android:textColor="#4CAF50"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvSurucuNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvOdemeYontemi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Nakit"
            android:textColor="#4CAF50"
            app:layout_column="2"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tvUcret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="30"
            android:textColor="#4CAF50"
            app:layout_column="3"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>
</LinearLayout>